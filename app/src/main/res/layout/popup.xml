<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#1C1A1A">

    <ImageView
        android:id="@+id/remove"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/remove"
        />

    <TextView
        android:id="@+id/reTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/remove"
        android:layout_marginTop="10dp"
        android:text="Are You Sure ?"
        android:textAlignment="center"
        android:textColor="#ACACAC"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reTitle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Do you really want to delete all Transactions? This Process can not be undone."
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/reContent"
        android:orientation="horizontal"
        android:background="#292727"
        android:padding="10dp"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cnlBtn2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Cancel"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#7A7A7A"
            />

        <Button
            android:id="@+id/delBtn2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Delete"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/red2"
            />
    </LinearLayout>

</RelativeLayout>